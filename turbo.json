{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["lib/**"],
      "inputs": ["src/**", "tsconfig.json"]
    },
    "typecheck": {
      "inputs": ["src/**", "tsconfig.json"],
      "outputs": []
    },
    "lint": {
      "inputs": ["src/**", "biome.json"],
      "outputs": []
    }
  }
}
